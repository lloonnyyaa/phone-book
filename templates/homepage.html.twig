{% extends 'base.html.twig' %}
{% block body %}
    <div class="container pt-3">
        <div class="row">
            <div class="col-12 mb-2">
                <button type="button" class="btn btn-block btn-success" data-toggle="modal" data-target="#addContactModal">
                    Add contact
                </button>
            </div>
            <div class="col-12 col-md-6">
                <button type="button" class="btn btn-block btn-primary" id="get-all-contacts">Get all contacts</button>
                <div id="answer-wrapper-all"></div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group row">
                    <label for="name-single" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name-single" placeholder="Name">
                    </div>
                </div>
                <button type="button" class="btn btn-block btn-warning" id="get-single-contact">Get single contact</button>
                <div id="answer-wrapper-single"></div> 
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addContactModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="new-contact-form">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add new contact</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                        </div>
                        <div id="phone-numbers-wrapper">
                            <div class="row mb-2">
                                <div class="col-12 d-flex justify-content-between align-items-center">
                                    <span><strong>Phone numbers:</strong></span>
                                    <button type="button" class="btn btn-secondary" id="add-phone-number">add number</button>
                                </div>
                            </div>
                            <div class="form-group clone">
                                <input type="text" class="form-control" name="phones[][number]" placeholder="Phone number">                            
                            </div>                        
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}      